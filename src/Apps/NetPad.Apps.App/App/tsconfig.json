{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@domain": ["core/@domain"],
      "@domain/*": ["core/@domain/*"],
      "@common": ["core/@common"],
      "@common/*": ["core/@common/*"],
      "@application": ["core/@application"],
      "@application/*": ["core/@application/*"],
    }
  },
  "include": [
    "test",
    "src"
  ],
  "files": [
    "src/resource.d.ts"
  ]
}
